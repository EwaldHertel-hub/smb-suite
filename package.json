{
  "name": "smb-suite",
  "version": "0.1.0",
  "private": true,
  "description": "SMB Suite – Angebote, Rechnungen & Business Dashboard für kleine Unternehmen (Next.js + NestJS + Prisma)",
  "author": "Ewald Hertel",
  "license": "MIT",
  "packageManager": "pnpm@9",
  "workspaces": [
    "apps/*",
    "packages/*",
    "infrastructure/*",
    "scripts/*"
  ],
  "scripts": {
    "dev:db": "docker compose -f infrastructure/docker-compose.yml up db redis -d",
    "dev:api": "pnpm --filter api dev",
    "dev:web": "pnpm --filter web dev",
    "dev": "concurrently -n DB,API,WEB -c green,blue,magenta \"pnpm dev:db\" \"pnpm dev:api\" \"pnpm dev:web\"",
    "build": "pnpm -r build",
    "test": "pnpm -r test --if-present",
    "lint": "pnpm -r lint --if-present",
    "format": "prettier --write .",
    "clean": "rimraf node_modules .turbo */*/node_modules */*/dist",
    "migrate": "pnpm --filter api prisma:migrate",
    "seed": "pnpm --filter api seed"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "rimraf": "^5.0.10",
    "dotenv": "^16.4.5"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EwaldHertel-hub/smb-suite.git"
  },
  "keywords": [
    "NestJS",
    "Next.js",
    "Prisma",
    "SaaS",
    "ERP",
    "Invoicing",
    "React",
    "TypeScript",
    "Small Business"
  ]
}